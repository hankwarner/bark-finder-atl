    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run All Tests",
            "program": "${workspaceRoot}/server/node_modules/jasmine/bin/jasmine.js",
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "NODE_ENV": "test"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Server",
            "program": "${workspaceFolder}/server/src/app.js",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}